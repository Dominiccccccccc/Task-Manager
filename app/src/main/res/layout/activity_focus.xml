<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/focusback_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/focusTaskbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/focus_taskbar"
        android:textAlignment="center"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progressBarCircle"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_below="@id/focusTaskbar"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:indeterminate="false"
        android:max="1500"
        android:progress="1500"
        android:rotation="90"
        android:progressDrawable="@drawable/timer_progressbar"/>

    <TextView
        android:id="@+id/focusEditTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif-light"
        android:text="25:00"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/focusTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBarCircle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/focusTask"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/taskEditText"
        android:layout_width="260sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/focusTask"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonStartPause"
        android:layout_width="216dp"
        android:layout_height="30dp"
        android:layout_below="@id/taskEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/blue"
        android:fontFamily="sans-serif-light"
        android:text="@string/startpause_btn"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="216dp"
        android:layout_height="30dp"
        android:layout_below="@id/buttonStartPause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/blue"
        android:fontFamily="sans-serif-light"
        android:text="@string/reset_btn"
        android:textColor="@color/white" />

</RelativeLayout>